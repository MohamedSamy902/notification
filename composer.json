{
    "name": "advanced-notifications/core",
    "description": "A full-featured, enterprise-grade notification system for Laravel.",
    "type": "library",
    "license": "MIT",

    "authors": [
        {
            "name": "Advanced Notifications Team",
            "email": "support@advanced-notifications.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0|^11.0|^12.0",
        "spatie/laravel-translatable": "^6.0",
        "guzzlehttp/guzzle": "^7.0",
        "google/auth": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "AdvancedNotifications\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AdvancedNotifications\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AdvancedNotifications\\AdvancedNotificationsServiceProvider"
            ],
            "aliases": {
                "AdvancedNotifications": "AdvancedNotifications\\Facades\\AdvancedNotifications"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0"
    }
}
